<header class="navbar navbar-fixed-top navbar-inverse">
    <div class="container">
        <%= link_to "sample app" , root_path, id: "logo" %>
        <nav>
            <!-- Adding the markup for a hamburger menu. -->
            <div class="navbar-header">
                <button id="hamburger" type="button" class="navbar-toggle collapsed">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <ul id="navbar-menu" class="nav navbar-nav navbar-right collapse navbar-collapse">

            <!-- Header links, with options regard to log in status-->
            <ul class="nav navbar-nav navbar-right">
                <li><%= link_to t(:Home) , root_path %></li>
                <li><%= link_to t(:Help) , help_path %></li>
                
                <% if logged_in? %>
                    <li><%= link_to t("Header.Users") , '#' %></li>
                    <li class="dropdown">
                        <a href="#" id="account" class="dropdown-toggle">
                            <%= t("Header.Account") %> <b class="caret"></b></a>
                            <ul id="dropdown-menu" class="dropdown-menu">
                                <li><%= link_to t("Header.Profile") , user_path(current_user) %></li>
                                <li><%= link_to t("Header.Settings") , edit_user_path(current_user) %></li>
                                <li class="divider"></li>
                                <li><%= link_to t("Header.Logout") , logout_path, data: { "turbo-method": :delete } %> </li>
                            </ul>
                    </li>
                
                    <% else %>
                        <li>
                            <%= link_to t("Form.Login") , login_path %>
                        </li>
                <% end %>
            </ul>
        </nav>
    </div>
</header>
